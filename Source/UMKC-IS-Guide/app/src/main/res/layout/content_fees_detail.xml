<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mnpw3d.umkcis_guide.FeesDetail"
    tools:showIn="@layout/activity_fees_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ADFFFFFF">

        <TextView
            android:id="@+id/txt_Fees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:text="Fees and Expenses"
            android:textColor="#4668c7"
            android:textSize="35dp" />

        <ImageView
            android:id="@+id/img_Fee"
            android:layout_width="120px"
            android:layout_height="100px"
            android:layout_below="@+id/txt_Fees"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/fee" />

        <TextView
            android:id="@+id/txt_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img_Fee"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text=">Fee Payment Options"
            android:textColor="#4668c7"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txt_FeeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_school"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="Fees can be paid at Administrative block at UMKC behind Student Union.It can be paid fully or partially before 20th of the Enrollment month.Partial payment can be done by paying minimum of 25 % of fees every month."
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_FeeContent"
            android:layout_marginTop="30dp"
            android:text="> Monthly Expenses"
            android:layout_marginLeft="10dp"
            android:textColor="#4668c7"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txtExpDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text=" It includes House rent, groceries, transportation and sim recharge which in Kansas City for a student varies from $300 to $500. It could further increase depending upon personal expenses."
            android:textColor="#000000" />

    </RelativeLayout>

</RelativeLayout>
