<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mnpw3d.umkcis_guide.PreDeparture"
    tools:showIn="@layout/activity_pre_departure">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ADFFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcorner"
            android:textColor="#ffffff"
            android:text="Flight"
            android:onClick="flight"
            android:id="@+id/btn_Flight"
            android:ems="14"
            android:layout_above="@+id/btn_ShoppingList"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="85dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcorner"
            android:textColor="#ffffff"
            android:text="Shopping List"
            android:onClick="shopping"
            android:ems="14"
            android:id="@+id/btn_ShoppingList"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/btn_Flight"
            android:layout_alignStart="@+id/btn_Flight" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fee Payment"
            android:onClick="fee"
            android:background="@drawable/roundcorner"
            android:textColor="#ffffff"
            android:id="@+id/btn_FeePayment"
            android:ems="14"
            android:layout_marginTop="77dp"
            android:layout_below="@+id/btn_ShoppingList"
            android:layout_alignRight="@+id/btn_Flight"
            android:layout_alignEnd="@+id/btn_Flight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:textColor="#4668c7"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pre Departure"
            android:id="@+id/txt_PreDeparture"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>
